doctype html
html
  head
    meta(charset='utf-8')
    body
      div(id='wrapper')
        div(id='header')
          h1
            a(href='/topic') Server Side Javascript
        div(id='container')
          nav(id='topic')
            ul
              each topic in topics
                li
                  a(href='/topic/'+topic)=topic
          article
            h2=title
            =description
          br
          a(href='/topic/new') create
